<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Eyepetizer" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_colorWhite</item>
        <item name="colorPrimaryDark">@color/base_colorWhite</item>
        <item name="colorAccent">@color/base_colorAccent</item>
    </style>

    <style name="Eyepetizer.NoActionBar" tools:ignore="ResourceName">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Eyepetizer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" tools:ignore="ResourceName" />

    <style name="Eyepetizer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" tools:ignore="ResourceName" />

    <style name="Eyepetizer.SettingTextView" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="typeface">fzlLTypeface</item>
    </style>

    <style name="Eyepetizer.MineTextView" parent="Eyepetizer.SettingTextView" tools:ignore="ResourceName">
        <item name="android:layout_height">25.5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <!--视频卡片照片右下角视频时长的样式-->
    <style name="Eyepetizer.VideoDurationTextView" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">3.5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingEnd">3.5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/base_shape_time_radius_black_2dp_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/base_colorGray</item>
        <item name="typeface">dinTypeface</item>
    </style>

    <!--briefcard右边+关注“按钮”的样式-->
    <style name="Eyepetizer.FollowTextView" tools:ignore="ResourceName">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@drawable/base_shape_follow_radius_black_2dp_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/base_plus_follow</item>
        <item name="android:textSize">10sp</item>
        <item name="typeface">fzdb1Typeface</item>
    </style>
</resources>